{% extends 'base.html.twig' %}

{% block title %}Détails de votre commande {% endblock %}

{% block body %}
    {{ include( "partials/title_section.html.twig", {'name' :'Détails de votre commande'}) }}
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <strong>Référence : </strong> {{ order.reference }}
                </div>
                <div  class="col-lg-6 text-right">
                    <strong>Date : </strong> {{ order.createdAt | date('d/m/Y')}}
                </div>
                <div class="col-lg-12 mt-5">
                    <table class="table">
                        <thead>
                        <tr>
                            <th class="product-thumbnail">&nbsp;</th>
                            <th class="product-name">Article</th>
                            <th class="product-price">Prix</th>
                            <th class="product-quantity">Quantité</th>
                            <th class="product-subtotal">Sous Total</th>
                            <th class="product-subtotal">TVA</th>
                            <th class="product-subtotal">Total</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for element in  order.orderDetails %}
                            <tr>
                                <td class="product-thumbnail">{{  element.id }} </td>
                                <td class="product-name" data-title="Product">{{  element.productName}} </td>
                                <td class="product-price" data-title="Price">{{  element.productPrice }} Frs CFA</td>
                                <td class="product-quantity" data-title="Quantity">{{  element.quantity}}</td>
                                <td class="product-subtotal" data-title="Total">{{  element.subTotal}}</td>
                                <td class="product-subtotal" data-title="Total">{{  element.taxe}}</td>
                                <td class="product-subtotal" data-title="Total">{{  element.subTotalTTC}}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th class="product-thumbnail">&nbsp;</th>
                            <th class="product-name">Article</th>
                            <th class="product-price">Prix</th>
                            <th class="product-quantity">Quantité</th>
                            <th class="product-subtotal">Sous Total</th>
                            <th class="product-subtotal">TVA</th>
                            <th class="product-subtotal">Total</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-6 offset-3">
                    <div class="border p-3 p-md-4">
                        <div class="heading_s1 mb-3">
                            <h6>Total du panier</h6>
                        </div>
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <td class="cart_total_label">Sous total</td>
                                    <td class="cart_total_amount">{{ order.subTotal/100 }} Frs CFA</td>
                                </tr>
                                <tr>
                                    <td class="cart_total_label">Livraison</td>
                                    <td class="cart_total_amount">{{ order.carrierPrice/100 }} Frs CFA</td>
                                </tr>
                                <tr>
                                    <td class="cart_total_label">TVA</td>
                                    <td class="cart_total_amount">{{ order.taxe/100 }} Frs CFA</td>
                                </tr>
                                <tr>
                                    <td class="cart_total_label text-uppercase">
                                        <strong>Total TTC</strong>
                                    </td>
                                    <td class="cart_total_amount"><strong>{{  order.subTotalTTC /100 }}</strong> Frs CFA</td>
                                </tr>
                                </tbody>
                            </table>
                            <div class="text-center">
                                <a href="{{ path('app_account') }}" class="btn btn-primary text-white">
                                    <i class="fa fa-arrow-circle-left"></i>
                                    Retour au compte
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
