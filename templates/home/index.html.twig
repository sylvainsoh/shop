    <!-- Start Product Area -->
    <div class="product-area section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <h2>
                            Sélection pour vous
                        </h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="product-info">
                        <div class="nav-main">
                            <!-- Tab Nav -->
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#nouveaute" role="tab">Nouveautés</a></li>
                                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#bestseller" role="tab">Meilleures ventes</a></li>
                                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#offreSpeciale" role="tab">Offres spéciales</a></li>
                                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#isFeatured" role="tab">En vedette</a></li>
                            </ul>
                            <!--/ End Tab Nav -->
                        </div>
                        <div class="tab-content" id="myTabContent">
                            <!-- Start Single Tab -->
                            <div class="tab-pane fade show active" id="nouveaute" role="tabpanel">
                                <div class="tab-single">
                                    <div class="row">
                                        {%  for product in  productNewArrival %}
                                            <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                                                {{ include('partials/product.html.twig', {'product' : product}) }}
                                            </div>
                                        {% endfor  %}
                                    </div>
                                </div>
                            </div>
                            <!--/ End Single Tab -->
                            <!-- Start Single Tab -->
                            <div class="tab-pane fade" id="bestseller" role="tabpanel">
                                <div class="tab-single">
                                    <div class="row">
                                        {%  for product in  productBestSeller %}
                                            <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                                                {{ include('partials/product.html.twig', {'product' : product}) }}
                                            </div>
                                        {% endfor  %}
                                    </div>
                                </div>
                            </div>
                            <!--/ End Single Tab -->

                            <!-- Start Single Tab -->
                            <div class="tab-pane fade" id="offreSpeciale" role="tabpanel">
                                <div class="tab-single">
                                    <div class="row">
                                        {%  for product in  productSpecialOffer %}
                                            <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                                                {{ include('partials/product.html.twig', {'product' : product}) }}
                                            </div>
                                        {% endfor  %}
                                    </div>
                                </div>
                            </div>
                            <!--/ End Single Tab -->

                            <!-- Start Single Tab -->
                            <div class="tab-pane fade" id="isFeatured" role="tabpanel">
                                <div class="tab-single">
                                    <div class="row">
                                        {%  for product in  productFeatured %}
                                            <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                                                {{ include('partials/product.html.twig', {'product' : product}) }}
                                            </div>
                                        {% endfor  %}
                                    </div>
                                </div>
                            </div>
                            <!--/ End Single Tab -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Product Area -->

    <!-- Start Midium Banner  -->
    <section class="midium-banner">
        <div class="container">
            <div class="row">
                <!-- Single Banner  -->
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="single-banner">
                        <img height="600" width="370" src="assets/images/backOrange.jpg" alt="back Image">
                        <div class="content">
                            <p>Collection Homme</p>
