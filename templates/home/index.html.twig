                <div class="col-lg-6 col-md-6 col-12">
                    <div class="single-banner">
                        <img height="600" width="370" src="assets/images/backOrange.jpg" alt="back Image">
                        <div class="content">
                            <p>Collection Femme</p>
                            <h3>Collection<br>
                                d'été
                            </h3>
                            <a href="#">Décourvir maintenant</a>
                        </div>
                    </div>
                </div>
                <!-- /End Single Banner  -->
            </div>
        </div>
    </section>
    <!-- End Midium Banner -->

    <!-- Start Most Popular -->
    <div class="product-area most-popular section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <h2>Meilleurs achats</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="owl-carousel popular-slider">
                        {%  for product in  productNewArrival %}
                            {{ include('partials/product.html.twig', {'product' : product}) }}
                        {% endfor  %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Most Popular Area -->


    <!-- Start Shop Home List  -->
    <section class="shop-home-list section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="row">
                        <div class="col-12">
                            <div class="shop-section-title">
                                <h1>En vente</h1>
                            </div>
                        </div>
                    </div>
                    <!-- Start Single List  -->
                    {%  for product in  productNewArrival %}
                        {% if loop.index <=3 %}
                            <div class="single-list">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <div class="list-image overlay">
                                            <img height="115" width="140" src="assets/uploads/products/{{ product.image}}" alt="#">
                                            <a href="#" class="buy"><i class="fa fa-shopping-bag"></i></a>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12 no-padding">
                                        <div class="content">
                                            <h4 class="title">
                                                <a href="{{ path("product_details",{'slug' : product.slug}) }}">
                                                    {{ product.neame }}
                                                </a>
                                            </h4>
                                            <p class="price with-discount">{{ product.price/100 }} Frs CFA</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif%}
                    {% endfor  %}
                    <!-- End Single List  -->
                </div>
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="row">
                        <div class="col-12">
                            <div class="shop-section-title">
                                <h1>Meilleures ventes</h1>
                            </div>
                        </div>
                    </div>
                    <!-- Start Single List  -->
                    {%  for product in  productFeatured %}
                        {% if loop.index <=3 %}
                            <div class="single-list">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <div class="list-image overlay">
                                            <img height="115" width="140" src="assets/uploads/products/{{ product.image}}" alt="#">
                                            <a href="#" class="buy"><i class="fa fa-shopping-bag"></i></a>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12 no-padding">
                                        <div class="content">
                                            <h4 class="title">
                                                <a href="{{ path("product_details",{'slug' : product.slug}) }}">
                                                    {{ product.neame }}
                                                </a>
                                            </h4>
                                            <p class="price with-discount">{{ product.price/100 }} Frs CFA</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif%}
                    {% endfor  %}
                    <!-- End Single List  -->
                </div>
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="row">
                        <div class="col-12">
                            <div class="shop-section-title">
                                <h1>Offres spéciales</h1>
                            </div>
                        </div>
                    </div>
                    <!-- Start Single List  -->
                    {%  for product in  productSpecialOffer %}
                        {% if loop.index <=3 %}
                            <div class="single-list">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <div class="list-image overlay">
                                            <img height="115" width="140" src="assets/uploads/products/{{ product.image}}" alt="#">
                                            <a href="#" class="buy"><i class="fa fa-shopping-bag"></i></a>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12 no-padding">
                                        <div class="content">
                                            <h4 class="title">
                                                <a href="{{ path("product_details",{'slug' : product.slug}) }}">
                                                    {{ product.neame }}
                                                </a>
                                            </h4>
                                            <p class="price with-discount">{{ product.price/100 }} Frs CFA</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif%}
                    {% endfor  %}
                    <!-- End Single List  -->
                </div>
            </div>
        </div>
    </section>
    <!-- End Shop Home List  -->

    <!-- Start Cowndown Area -->
    <section class="cown-down">
        <div class="section-inner ">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 col-12 padding-right">
                        <div class="image">
                            <img src="assets/images/backOrange.jpg" alt="#">
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 padding-left">
                        <div class="content">
                            <div class="heading-block">
